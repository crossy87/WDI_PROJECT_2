<h1>Edit a Pug Post</h1>

<form method="POST" action="/pugs/<%= pug.id %>">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="pugName" id="name" placeholder="Pug Name" class="form-control" value="<%= pug.name %>">
  </div>
  <div class="form-group">
    <label for="pugAge">Age</label>
    <input type="text" name="age" id="age" placeholder="Pug Age" class="form-control" value="<%= pug.pugAge %>">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="pugDescription" id="description" placeholder="Pug Description" class="form-control"><%= pug.Pugdescription %></textarea>
  </div>
  <div class="form-group">
    <label for="costume">Costume</label>
    <select name="costumes" id="costume" class="form-control select2">
      <% costumes.forEach((costume) => { %>
        <option <% if(costumes === costume) { %>selected<% } %>><%= costume %></option>
        <% }) %>
      </select>
    </div>
    <div class="form-group">
      <label>Images</label>
      <input type="text" name="pugImages" class="form-control" value="<%= pug.pugImages[0] %>">

    </div>

    <button>Add</button>
  </form>
